<div class="wrapper-navbar">

  <div class="navbar-wagon">
      <!-- Logo -->
      <div class="navbar-wagon-brand" id="logo">
        <%= link_to root_path, class: "navbar-wagon-brand" do %>
          <%= image_tag "SAlogo.png", height: 50 %>
        <% end %>
      </div>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">
        <% if user_signed_in? %>
          <!-- Links when logged in -->
          <%= link_to "Pricing", "#", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Contact", "#", class: "navbar-wagon-item navbar-wagon-link" %>

          <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
          <!-- Avatar with dropdown menu -->
          </div>
        <% else %>
          <!-- Login link (when logged out) -->
          <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link signup-btn" %>
          <%= link_to 'Log In', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      </div>

  </div>

</div>
