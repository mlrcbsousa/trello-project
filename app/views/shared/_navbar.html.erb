<div class="wrapper-navbar">
  <div class="navbar-pages">
    <!-- Logo -->
    <%= link_to root_path, id: "logo" do %>
      <%= image_tag "SAlogo.png", height: 50 %>
    <% end %>
    <!-- Right Navigation -->
    <div class="navbar-right">
      <%= link_to "Knowledge", "/knowledge", class: "navbar-item navbar-link" %>
      <%= link_to "Pricing", "/pricing", class: "navbar-item navbar-link" %>
      <%= link_to "About", "/about", class: "navbar-item navbar-link" %>

      <% if user_signed_in? %>
        <!-- Links when logged in -->
        <%= link_to 'My Sprints', sprints_path, class: "navbar-item navbar-link signup-btn" %>
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "navbar-item navbar-link" %>
      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-item navbar-link signup-btn" %>
        <%= link_to 'Log In', new_user_session_path, class: "navbar-item navbar-link" %>
      <% end %>
    </div>

  </div>
</div>
