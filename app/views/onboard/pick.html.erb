<div class="col-xs-12 col-sm-6">
  <div class="left-side">
    <p>Select which trello board</p>
    <div style="overflow: scroll;">
      <div class="row">

        <% @boards.each do |board| %>
          <div class="col-xs-12 col-sm-6">

            <%= render 'shared/trello_card', type: board %>

            <%= form_tag new_path, method: :post do %>
              <%= hidden_field_tag :name, board.name %>
              <%= hidden_field_tag :trello_ext_id, board.trello_ext_id %>
              <%= hidden_field_tag :trello_url, board.trello_url %>
              <div class="pick">
                <%= submit_tag 'Pick this board' %>
              </div>
            <% end %>

          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
<div class="col-xs-12 col-sm-6">
  <div class="right-side" style="background-image: url(<%= image_path('calendar-full.png') %>);"></div>
<div>

<!-- required for the trello card -->
<script src="https://p.trellocdn.com/embed.min.js"></script>
